<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <EditText
        android:id="@+id/shuru_id"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:textSize="30sp"
        android:padding="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textAlignment="textEnd"
        android:layout_gravity="end"
        android:singleLine="true"
        android:editable="false"
        android:background="#DDD7D7"
        tools:ignore="Deprecated" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

        <Button
            android:id="@+id/delete_id"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="AC"
            android:textSize="35sp"
            android:background="#DDD7D7"
            android:layout_marginRight="5dp" />
        <Button
            android:id="@+id/jiajian_id"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="+/-"
            android:textSize="35sp"
            android:background="@drawable/gray"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/baifenhao_id"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:text="%"
            android:textSize="35sp"
            android:background="@drawable/gray"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/chu_id"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="รท"
            android:textSize="35sp"
            android:background="@drawable/gray"
            />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/one_id"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="35sp"
                android:background="@drawable/gray"
                android:layout_height="100dp"
                android:layout_marginRight="5dp" />
            <Button
                android:id="@+id/two_id"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="35sp"
                android:background="@drawable/gray"
                android:layout_height="100dp"
                android:layout_marginRight="5dp"/>
            <Button
                android:id="@+id/three_id"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="3"

                android:textSize="35sp"
                android:background="@drawable/gray"
                android:layout_height="100dp"
                android:layout_marginRight="5dp"/>
            <Button
                android:id="@+id/cheng_id"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="ร"
                android:textSize="35sp"
                android:background="@drawable/gray"
                android:layout_height="100dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">


            <Button
                android:id="@+id/four_id"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="4"
                android:textSize="35sp"
                android:background="@drawable/gray"
                android:layout_height="100dp"
                android:layout_marginRight="5dp"/>
            <Button
                android:id="@+id/five_id"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="5"

                android:textSize="35sp"
                android:background="@drawable/gray"
                android:layout_height="100dp"
                android:layout_marginRight="5dp"/>
            <Button
                android:id="@+id/six_id"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="6"
                android:textSize="35sp"
                android:background="@drawable/gray"
                android:layout_height="100dp"/>
            <Button
                android:id="@+id/jian_id"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="-"
            android:textSize="35sp"
            android:background="@drawable/gray"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/seven_id"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="7"
                android:textSize="35sp"
                android:background="@drawable/gray"
                android:layout_height="100dp"
                android:layout_marginRight="5dp" />
            <Button
                android:id="@+id/eight_id"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="8"
                android:textSize="35sp"
                android:background="@drawable/gray"
                android:layout_height="100dp"
                android:layout_marginRight="5dp"/>
            <Button
                android:id="@+id/nine_id"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="9"
                android:textSize="35sp"
                android:background="@drawable/gray"
                android:layout_height="100dp"
                android:layout_marginRight="5dp"/>
            <Button
                android:id="@+id/jia_id"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="+"
                android:textSize="35sp"
                android:background="@drawable/gray"
                android:layout_height="100dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            >

            <Button
                android:id="@+id/xiaoshudian_id"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="."
                android:textSize="35sp"
                android:background="@drawable/gray"
                android:layout_height="100dp"
                android:layout_marginRight="5dp" />
            <Button
                android:id="@+id/zero_id"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="35sp"
                android:background="@drawable/gray"
                android:layout_height="100dp"
                android:layout_marginRight="5dp"/>
            <Button
                android:id="@+id/doubleZero_id"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="00"

                android:textSize="35sp"
                android:background="@drawable/gray"
                android:layout_height="100dp"
                android:layout_marginRight="5dp"/>
            <Button
                android:id="@+id/dengyu_id"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="="
                android:textSize="35sp"
                android:background="@drawable/gray"
                android:layout_height="100dp"/>
        </TableRow>
    </TableLayout>


</LinearLayout>